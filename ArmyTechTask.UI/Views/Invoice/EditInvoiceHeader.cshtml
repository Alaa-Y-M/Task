@model ArmyTechTask.UI.Models.Invoice.InvoiceHeaderVm
@{
    ViewData["Title"] = "Edit Headers";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<div class="container mt-4">
    <h3> Edit Invoice Header</h3>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="EditInvoiceHeader" asp-controller="Invoice">
                <div class="row">
                    <div class="col-8">
                        <!--Invoice Details-->
                        <div class="form-group">
                            <label asp-for="CustomerName" class="control-label"></label>
                            <input asp-for="CustomerName" type="text" class="form-control" />
                            <span asp-validation-for="CustomerName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Invoicedate" class="control-label"></label>
                            <input asp-for="Invoicedate" type="date" class="form-control" />
                            <span asp-validation-for="Invoicedate" class="text-danger"></span>
                        </div>
                        @* <div class="form-group">
                            <label asp-for="BranchId" class="control-label"></label>
                            <input asp-for="BranchId" type="number" class="form-control" />
                            <span asp-validation-for="BranchId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CashierId" class="control-label"></label>
                            <input asp-for="CashierId" type="number" class="form-control" />
                            <span asp-validation-for="CashierId" class="text-danger"></span>
                        </div> *@
                        <div class="form-group">
                            <label class="control-label">Branches</label>
                            <select asp-for="BranchId" type="number" class="form-control" asp-items="@ViewBag.listb" ></select>
                            <span asp-validation-for="BranchId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Cashiers</label>
                            <select asp-for="CashierId" type="number" class="form-control" asp-items="@ViewBag.listc" ></select>
                            <span asp-validation-for="CashierId" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>

            <div class="mt-2 mb-1">
                <a asp-action="index" class="btn btn-outline-warning"><i class="fas fa-backward fa-2x"> Backward</i></a>
            </div>
        </div>
    </div>
</div>
